{{ >_head }}


	<header>
		<h1>
			<a href="index.html" class="back" title="back to index">&larr;</a>
			{{ title }}
		</h1>
		{{ #minification_visible }}
		<p>
			({{ #minified }}<a href="{{ minified }}">{{ /minified }}minified{{ #minified }}</a>{{ /minified }}
			|
			{{ #unminified }}<a href="{{ unminified }}">{{ /unminified }}unminified{{ #unminified }}</a>{{ /unminified }})
		</p>
		{{ /minification_visible }}
	</header>

	<article>
		
		{{ #description }}
		<p>{{{ . }}}</p>
		{{ /description }}
		
		<bivrost-player{{ #options }} {{attr}}="{{value}}"{{ /options }}>
			{{ #src }}
			<bivrost-media url="{{url}}{{ ^url }}{{ . }}{{ /url }}"{{ #type }} type="{{ type }}"{{ /type }}></bivrost-media>
			{{ /src }}
		</bivrost-player>
		
		<p>Source code:</p>
		<code>	
		&lt;bivrost-player{{ #options }}<br /> 
		&nbsp;	&nbsp;	{{ attr }}="{{ value }}"{{ /options }}&gt;
		{{ #src }}
		<br />&nbsp;	&lt;bivrost-media 
				{{ #type }}<br/>&nbsp;	&nbsp;	&nbsp;	{{ /type }}
				url="<a href="{{url}}{{ ^url }}{{ . }}{{ /url }}">{{url}}{{ ^url }}{{ . }}{{ /url }}</a>"{{!
				}}{{ #type }}<br/>&nbsp;	&nbsp;	 &nbsp;	type="{{ type }}"{{ /type }}{{!
				}}&gt;&lt;/bivrost-media&gt;
		{{ /src }}
		<br />&lt;/bivrost-player&gt;
		</code>
		
		<p>Alternative source code with data attributes:</p>
		<code>
		&lt;div data-bivrost-player{{ #options }} <br />
		&nbsp;	&nbsp;	{{ ^unescaped }}data-bivrost-{{ /unescaped }}{{ attr }}="{{ value }}"{{ /options }}&gt;
		{{ #src }}
		<br />&nbsp;	&lt;div data-bivrost-media 
				{{ #type }}<br/>&nbsp;	&nbsp;	&nbsp;	{{ /type }}
				data-bivrost-url="<a href="{{url}}{{ ^url }}{{ . }}{{ /url }}">{{url}}{{ ^url }}{{ . }}{{ /url }}</a>"{{!
				}}{{ #type }}<br/>&nbsp;	&nbsp;	&nbsp;	data-bivrost-type="{{ type }}"{{ /type }}{{!
				}}&gt;&lt;/div&gt;
		{{ /src }}
		<br />&lt;/div&gt;
		</code>
		
	</article>

	<script type="text/javascript">
		var player;
		addEventListener("load", function() {
			player=document.getElementsByTagName("bivrost-player")[0].bivrost;
		});
	</script>
		
{{ >_foot }}